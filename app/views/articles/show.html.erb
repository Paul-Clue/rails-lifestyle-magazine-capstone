<p id="notice"><%= notice %></p>

<% if @article.image.attached? %>
  <%= image_tag ("#{url_for(@article.image)}"), :size => "260x180", class: "img-responsive" %>
<% end %>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Story:</strong>
  <%= @article.text %>
</p>

<p>
  <strong>Image:</strong>
  <%= @article.image %>
</p>

<p>
  <strong>User:</strong>
  <%= @article.user_id %>
</p>

<p>
  <strong>Date created:</strong>
  <%= @article.createdAt %>
</p>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
